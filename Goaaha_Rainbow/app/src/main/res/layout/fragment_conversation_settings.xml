<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#1dc5e7"
        android:padding="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="个人中心"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#fff"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/head_bg">
                <com.easemob.chatuidemo.activity.RoundImageView
                    android:id="@+id/head_portrait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/head"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:background="#fff">
                <RelativeLayout
                    android:id="@+id/czh_edit_gxqm"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_bottom_selector">
                    <ImageView
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_marginTop="20px"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20px"
                        android:src="@drawable/caizihuan_gxqm"/>
                    <TextView
                        android:id="@+id/czh_gxqm"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="100px"
                        android:text="Goaaha_rainbow"
                        android:layout_marginTop="20px"
                        android:textColor="@color/gray_normal"
                        android:textSize="14sp"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/caizihuan_go"
                        android:layout_marginTop="20px"
                        android:visibility="visible" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#c2c1c1"/>
                <RelativeLayout
                    android:id="@+id/czh_get_ewm"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_bottom_selector">
                    <ImageView
                        android:id="@+id/czh_ewm"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_marginTop="20px"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20px"
                        android:src="@drawable/caizihuan_ewm"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="100px"
                        android:text="二维码名片"
                        android:layout_marginTop="20px"
                        android:textColor="@color/gray_normal"
                        android:textSize="14sp"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/caizihuan_go"
                        android:layout_marginTop="20px"
                        android:visibility="visible" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#c2c1c1"/>
                <RelativeLayout
                    android:id="@+id/czh_to_share"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_bottom_selector">
                    <ImageView
                        android:id="@+id/czh_fx"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_marginTop="20px"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20px"
                        android:src="@drawable/caizihuan_fx"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="100px"
                        android:text="分享"
                        android:layout_marginTop="20px"
                        android:textColor="@color/gray_normal"
                        android:textSize="14sp"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/caizihuan_go"
                        android:layout_marginTop="20px"
                        android:visibility="visible" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#c2c1c1"/>
                <RelativeLayout
                    android:id="@+id/czh_to_zx"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_bottom_selector">
                    <ImageView
                        android:id="@+id/czh_zx"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_marginTop="20px"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20px"
                        android:src="@drawable/caizihuan_zx"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="100px"
                        android:text="注销账号"
                        android:layout_marginTop="20px"
                        android:textColor="@color/gray_normal"
                        android:textSize="14sp"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/caizihuan_go"
                        android:layout_marginTop="20px"
                        android:visibility="visible" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#c2c1c1"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_bottom_selector">
                    <ImageView
                        android:id="@+id/czh_zhxx"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_marginTop="20px"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20px"
                        android:src="@drawable/caizihuan_zhxx"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="100px"
                        android:text="账号信息"
                        android:layout_marginTop="20px"
                        android:textColor="@color/gray_normal"
                        android:textSize="14sp"/>
                    <ImageView
                        android:id="@+id/czh_get_zhxx"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/caizihuan_go"
                        android:layout_marginTop="20px"
                        android:visibility="visible" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#c2c1c1"/>
                <RelativeLayout
                    android:id="@+id/czh_to_edit"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_bottom_selector">
                    <ImageView
                        android:id="@+id/czh_sz"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_marginTop="20px"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20px"
                        android:src="@drawable/caizihuan_sz"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="100px"
                        android:text="设置"
                        android:layout_marginTop="20px"
                        android:textColor="@color/gray_normal"
                        android:textSize="14sp"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/caizihuan_go"
                        android:layout_marginTop="20px"
                        android:visibility="visible" />
                </RelativeLayout>
                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="330dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#fff"
                    android:background="#df0606"
                    android:layout_marginTop="45dp"
                    android:layout_marginBottom="30dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>