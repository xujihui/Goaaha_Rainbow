<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightGray2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:background="@color/top_bar_normal_bg"
        android:padding="5dp">
        <ImageView
            android:id="@+id/czh_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/caizihuan_back"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_height="match_parent"
            android:text="账号信息"
            android:paddingRight="20dp"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#fff"/>
    </LinearLayout>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/goaaha_logo2b"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="#fff">
        <RelativeLayout
            android:id="@+id/czh_edit_gxqm"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="40dp"
            android:background="@drawable/btn_bottom_selector">
            <TextView
                android:id="@+id/czh_gxqm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:text="版本信息"
                android:layout_marginTop="20px"
                android:textColor="@color/gray_normal"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="最新版本"
                android:layout_marginTop="20px"
                android:layout_marginRight="5dp"
                android:visibility="visible" />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c2c1c1"/>
        <RelativeLayout
            android:id="@+id/czh_get_ewm"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="40dp"
            android:background="@drawable/btn_bottom_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:text="版本名称"
                android:layout_marginTop="20px"
                android:textColor="@color/gray_normal"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Goaaha_Rainbow"
                android:layout_marginTop="20px"
                android:layout_marginRight="5dp"
                android:visibility="visible" />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c2c1c1"/>
        <RelativeLayout
            android:id="@+id/czh_to_share"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="40dp"
            android:background="@drawable/btn_bottom_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:text="功能"
                android:layout_marginTop="20px"
                android:textColor="@color/gray_normal"
                android:textSize="14sp"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/caizihuan_go"
                android:layout_marginTop="20px"
                android:visibility="visible" />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c2c1c1"/>
        <RelativeLayout
            android:id="@+id/czh_to_zx"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="40dp"
            android:background="@drawable/btn_bottom_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:text="帮助"
                android:layout_marginTop="20px"
                android:textColor="@color/gray_normal"
                android:textSize="14sp"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/caizihuan_go"
                android:layout_marginTop="20px"
                android:visibility="visible" />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c2c1c1"/>
        <RelativeLayout
            android:id="@+id/czh_zhxx"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="40dp"
            android:background="@drawable/btn_bottom_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:text="反馈"
                android:layout_marginTop="20px"
                android:textColor="@color/gray_normal"
                android:textSize="14sp"/>
            <ImageView
                android:id="@+id/czh_get_zhxx"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/caizihuan_go"
                android:layout_marginTop="20px"
                android:visibility="visible" />
        </RelativeLayout>

    </LinearLayout>



</LinearLayout>