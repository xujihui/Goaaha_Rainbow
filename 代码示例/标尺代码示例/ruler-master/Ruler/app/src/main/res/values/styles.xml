<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RulerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingLeft">20dp</item>

        <item name="guideScaleTextSize">40dp</item>
        <item name="graduatedScaleWidth">4dp</item>
        <item name="graduatedScaleBaseLength">60dp</item>
        <item name="scaleColor">@color/colorRulerViewScale</item>

        <item name="pointerRadius">40dp</item>
        <item name="pointerStrokeWidth">4dp</item>
        <item name="pointerColor">@color/colorRulerViewPointer</item>

        <item name="labelTextSize">20dp</item>
        <item name="defaultLabelText">@string/ruler_view_default_text</item>
        <item name="labelColor">@color/colorRulerViewLabel</item>

        <item name="backgroundColor">@color/colorRulerViewBackground</item>
    </style>

</resources>
